<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            display: none;
        }
    </style>
    <script>
        function onBodyLoadHandler() {
            if (self === top) {
                document.getElementsByTagName("body")[0].style.display = 'block';
            } else {
                top.location = self.location;
            }
        }
    </script>
</head>
<body onload="onBodyLoadHandler()">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("ISM IoT Portal", "Index", "IsmDevices", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Approve Devices", "Index", "ApproveDevices")</li>
                <li>@Html.ActionLink("Hardware", "Index", "Hardware")</li>
                <li>@Html.ActionLink("Software", "Index", "Software")</li>
                <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - HS Mannheim SWT</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>